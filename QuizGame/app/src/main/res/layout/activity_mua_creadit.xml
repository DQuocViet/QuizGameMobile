<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MuaCreaditActivity">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coins" />

    <TextView
        android:id="@+id/textView_tongCredit_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="10000"
        android:textColor="#942A07"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Muacredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mua Credit"
        android:textColor="#A52B04"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/button_500"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/my_button1"
        android:text="500"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView_Muacredit"
        tools:layout_editor_absoluteX="35dp" />

    <Button
        android:id="@+id/button_1000"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/my_button2"
        android:text="1000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_500"
        app:layout_constraintTop_toTopOf="@+id/button_500" />

    <Button
        android:id="@+id/button_3000"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/my_button3"
        android:text="3000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/button_500"
        app:layout_constraintTop_toBottomOf="@+id/button_500" />

    <Button
        android:id="@+id/button_5000"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/my_button4"
        android:text="5000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button_1000"
        app:layout_constraintStart_toEndOf="@+id/button_3000"
        app:layout_constraintTop_toTopOf="@+id/button_3000" />

    <Button
        android:id="@+id/button_trove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/my_button1"
        android:onClick="luuCredit"
        android:text="Vá» menu"
        app:layout_constraintEnd_toEndOf="@+id/button_5000"
        app:layout_constraintStart_toStartOf="@+id/button_3000"
        app:layout_constraintTop_toBottomOf="@+id/button_3000" />

</androidx.constraintlayout.widget.ConstraintLayout>